<span class = "students_link">
  <%= link_to "Export student info", :action => "csv" %>
</span>

<div id="class_info">
    <h2>LISTING STUDENT INFORMATIONS</h2>

    <%= will_paginate @users %>  
    <table class="class_form">
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Stony Brook Id</th>
        <th>Host Institution</th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%=h user.last_name %></td>
        <td><%=h link_to user.first_name, :action => "class_information", :user_id => user.id %></td>
        <td><%=h user.stony_brook_id %></td>
        <td><%=h user.host_institution %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Class Form', :action => 'class_form' %>
</div>    
